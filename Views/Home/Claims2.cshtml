@model IEnumerable<AzureAdDemo1.Models.Claims>
@using System.Security.Principal
@{
    ViewData["Title"] = "Claims2";
}

@if (User.Identity.IsAuthenticated)
{
    var country = @User.Claims.ToList().FirstOrDefault(x => x.Type.Contains("ctry"))?.Value;
    var surname = @User.Claims.ToList().FirstOrDefault(x => x.Type.Contains("surname"))?.Value;
    <h1>Hello @surname from @country!</h1>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.DisplayName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PrincipalName)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DisplayName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PrincipalName)
                    </td>

                </tr>
            }
        </tbody>
    </table>
}



